      <TextField fx:id="message" layoutX="97.0" layoutY="361.0" onKeyPressed="#onEnter" prefHeight="25.0" prefWidth="407.0" promptText="自分の気持ちを打ち込むのだ" />
      <Label layoutX="14.0" layoutY="361.0" prefHeight="25.0" prefWidth="80.0" text="メッセージ">
         <font>
            <Font name="Meiryo Bold" size="15.0" />
         </font>
      </Label>
      <TextField fx:id="address" layoutX="98.0" layoutY="330.0" prefHeight="25.0" prefWidth="169.0" promptText="ドメイン使えるかﾜｶﾝﾈ" />
      <Label layoutX="14.0" layoutY="330.0" prefHeight="25.0" prefWidth="80.0" text="接続先">
         <font>
            <Font name="Meiryo Bold" size="15.0" />
         </font>
      </Label>
      <Label layoutX="293.0" layoutY="330.0" prefHeight="25.0" prefWidth="80.0" text="ポート番号">
         <font>
            <Font name="Meiryo Bold" size="15.0" />
         </font>
      </Label>
