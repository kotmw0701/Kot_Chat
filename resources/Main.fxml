      <Label layoutX="14.0" layoutY="8.0" prefHeight="25.0" prefWidth="62.0" text="UserID">
         <font>
            <Font name="Meiryo Bold" size="15.0" />
         </font>
      </Label>
      <Button layoutX="243.0" layoutY="8.0" mnemonicParsing="false" onAction="#onChange" prefHeight="1.0" prefWidth="71.0" text="変更" />
   </children>
</AnchorPane>
